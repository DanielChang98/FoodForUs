<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="20dp"
    tools:context=".ui.elderly.ElderlyFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="3dp"
                    android:text="Name"
                    android:textColor="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/image_wName"
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:layout_margin="2dp"
                    app:srcCompat="@drawable/ic_left_arrow" />
            </LinearLayout>


            <EditText
                android:id="@+id/editText_elderlyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/primary_color_border"
                android:hint="Name of Elderly"
                android:inputType="textCapSentences|textAutoCorrect"
                android:paddingHorizontal="8dp"
                android:paddingVertical="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="3dp"
                    android:text="Gender"
                    android:textColor="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/image_wGender"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_margin="2dp"
                    app:srcCompat="@drawable/ic_left_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editText_elderlyGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:background="@drawable/primary_color_border"
                    android:hint="Gender "
                    android:inputType="textCapSentences|textAutoCorrect"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="3dp"
                    android:text="Description"
                    android:textColor="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/image_wDescription"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_margin="2dp"
                    app:srcCompat="@drawable/ic_left_arrow" />
            </LinearLayout>

            <EditText
                android:id="@+id/editText_elderlyDescription"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:background="@drawable/primary_color_border"
                android:gravity="start"
                android:hint="Add some description..."
                android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
                android:paddingHorizontal="8dp"
                android:paddingVertical="5dp"
                android:scrollbars="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="3dp"
                    android:text="Location"
                    android:textColor="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/image_wLocation"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_margin="2dp"
                    app:srcCompat="@drawable/ic_left_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_elderlyLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="7"
                    android:background="@drawable/primary_color_border"
                    android:hint="Location"
                    android:inputType="textPostalAddress"
                    android:maxLines="3"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="5dp"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/button_elderlyLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/primary_color_border"
                    android:text="Search\n location"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="3dp"
                    android:text="Contact Number"
                    android:textColor="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/image_wContact"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_margin="2dp"
                    app:srcCompat="@drawable/ic_left_arrow" />
            </LinearLayout>

            <EditText
                android:id="@+id/editText_elderlyContactNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/primary_color_border"
                android:hint="ContactNumber"
                android:inputType="phone"
                android:paddingHorizontal="8dp"
                android:paddingVertical="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="3dp"
                    android:text="Image of elderly"
                    android:textColor="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/image_wImage"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_margin="2dp"
                    app:srcCompat="@drawable/ic_left_arrow" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="240dp">

                <ImageView
                    android:id="@+id/imageView_elderlyImage"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="4dp"
                    android:background="#DDDDDD" />

                <Button
                    android:id="@+id/button_uploadElderlyImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:background="#FFFFFF"
                    android:drawableLeft="@drawable/ic_image"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="2dp"
                    android:text="  Upload image"
                    android:textColor="@color/colorPrimary" />
            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <Button
            android:id="@+id/button_registerElderly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:paddingHorizontal="20dp"
            android:text="Register"
            android:textColor="#FFF"
            android:textStyle="bold" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createText"
        app:layout_constraintVertical_bias="0.25" />

</RelativeLayout>
